<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
   <RadioGroup
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RadioButton
           android:id="@+id/radioButton_firstPage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableTop="@mipmap/home"
           style="@style/style_RadioButton"
           android:text="首页"
           />
       <RadioButton
           android:id="@+id/radioButton_live"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableTop="@mipmap/live"
           style="@style/style_RadioButton"
           android:text="直播"
           />
       <RadioButton
           android:id="@+id/radioButton_follow"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableTop="@mipmap/follow"
           style="@style/style_RadioButton"
           android:text="关注"
           />
       <RadioButton
           android:id="@+id/radioButton_user"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableTop="@mipmap/user"
           style="@style/style_RadioButton"
           android:text="我的"
           />
   </RadioGroup>
</LinearLayout>
